{
    "name": "My Custom Tiptap Styles",
    "version": "1.0.0",
    "extensions": [
      {
        "type": "tiptapToolbarExtension",
        "kind": "styleMenu",
        "alias": "Styles.Tiptap.StyleMen",
        "name": "Custom Styles",
        "meta": {
          "alias": "myCustomStyleMenu",
          "icon": "icon-palette",
          "label": "Custom Styles"
        },
        "items": [
          {
            "label": "Headings",
            "items": [
              { "label": "Heading 2", "data": { "tag": "h2" }, "appearance": { "icon": "icon-heading-2" } },
              { "label": "Heading 3", "data": { "tag": "h3" }, "appearance": { "icon": "icon-heading-3" } },
              { "label": "Heading 4", "data": { "tag": "h4" }, "appearance": { "icon": "icon-heading-4" } }
            ]
          },
          {
            "label": "Text",
            "items": [
              { "label": "Lead",      "data": { "tag": "p", "class": "lead" } },
              { "label": "Muted",     "data": { "tag": "p", "class": "text-muted" } },
              { "label": "Small",     "data": { "tag": "p", "class": "text-small" } },
              { "label": "Highlight", "data": { "tag": "mark" } }
            ]
          },
          {
            "label": "Blocks",
            "items": [
              { "label": "Quote",    "data": { "tag": "blockquote" } },
              { "label": "Callout",  "data": { "tag": "div", "class": "callout" } }
            ]
          },
          {
            "label": "Lists",
            "items": [
              { "label": "Bulleted",   "data": { "tag": "ul" } },
              { "label": "Numbered",   "data": { "tag": "ol" } },
              { "label": "Checklist",  "data": { "tag": "ul", "class": "list-check" } }
            ]
          },
          {
            "label": "Buttons",
            "items": [
              { "label": "Primary",   "data": { "tag": "a", "class": "btn btn-primary" } },
              { "label": "Secondary", "data": { "tag": "a", "class": "btn btn-secondary" } }
            ]
          },
          {
            "label": "Align",
            "items": [
              { "label": "Left",   "data": { "class": "text-left" } },
              { "label": "Center", "data": { "class": "text-center" } },
              { "label": "Right",  "data": { "class": "text-right" } }
            ]
          }
        ]
      },
      {
        "type": "stylesheet",
        "alias": "Custom Styles.Tiptap.EditorPreviewStyles",
        "name": "Editor Preview Styles",
        "css": [
          "~/App_Plugins/Styles/styles.css"
        ]
      }
    ]
  }
  