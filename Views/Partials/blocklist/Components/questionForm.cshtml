@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var c = (ContentModels.QuestionForm)Model.Content;

    var title      = string.IsNullOrWhiteSpace(c.FormTitle) ? "Have a question?" : c.FormTitle;
    var buttonText = string.IsNullOrWhiteSpace(c.ButtonText) ? "Submit" : c.ButtonText;
    var recipient  = c.RecipientEmail;

    
}

<section class="qf">
    <div class="qf-inner">
        <h2 class="qf-title">@title</h2>

            <div class="qf-form">
                <input type="hidden" name="recipientEmail" value="@recipient" />

                <div class="qf-row">
                    <input class="qf-input" type="text" name="name" placeholder="Name" required />
                    <input class="qf-input" type="email" name="email" placeholder="Email" required />
                </div>

                <div class="qf-row">
                    <textarea class="qf-textarea" name="message" rows="6" placeholder="Question" required></textarea>
                </div>

                <button type="submit" class="qf-submit">@buttonText</button>

            </div>
    </div>
</section>
